    },
    "avoid": {
      "position_size_pct": 0.0,
      "size_multiplier": 0.0
    }
  },

  "regime_sizing": {
    "_comment": "Position size multipliers by market regime",
    "volatile": {
      "position_multiplier": 1.3,
      "_note": "Volatile = best mean reversion, increase size"
    },
    "bear": {
      "position_multiplier": 1.2,
      "_note": "Bear = good mean reversion, increase size"
    },
    "choppy": {
      "position_multiplier": 1.0,
      "_note": "Choppy = standard conditions"
    },
    "bull": {
      "position_multiplier": 0.8,
      "_note": "Bull = harder for mean reversion, reduce size"
    }
  }
